{
  "manifest_version": 3,
  "name": "Limitr",
  "short_name": "Limitr",
  "version": "1.1.0",
  "author": "Ozan Karaali",
  "description": "Audio compressor, limiter, and normalizer for any browser tab",
  "permissions": [
    "storage",
    "tabCapture",
    "offscreen",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
